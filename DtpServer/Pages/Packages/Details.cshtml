@page
@model DtpServer.Pages.Packages.DetailsModel

@{
    ViewData["Title"] = "Package Details";
}

<h2>Package Details</h2>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Package.Algorithm)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Package.Algorithm)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Package.Id)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Package.Id)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Package.Created)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Package.Created)
        </dd>
        <dt>
            Server Type
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Package.Server.Type)
        </dd>
        <dt>
            Server address
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Package.Server.Id)
        </dd>
        <dt>
            Server signature
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Package.Server.Signature)
        </dd>
    </dl>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Claims[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Claims[0].Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Claims[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Claims[0].Value)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Claims[0].Activate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Claims[0].Expire)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Claims[0].State)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Claims)
        {
            <tr>
                <td>
                    <a asp-page="/Claims/Details" asp-route-id="@Convert.ToBase64String(item.Id)">@Html.DisplayFor(modelItem => item.Id)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Created)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Value)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Activate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Expire)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <pre><code>@Newtonsoft.Json.JsonConvert.SerializeObject(Model.Package, Newtonsoft.Json.Formatting.Indented)</code></pre>
</div>
<div>
    <a asp-page="./Index">Back to List</a>
</div>
