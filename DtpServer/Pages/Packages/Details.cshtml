@page
@model DtpServer.Pages.Packages.DetailsModel

@{
    ViewData["Title"] = "Package Details";
}

<h2>Package Details</h2>

<table class="table table-bordered">
    <tbody>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.Package.Algorithm)
            </td>
            <td>
                @Html.DisplayFor(model => model.Package.Algorithm)
            </td>
        </tr>

        <tr>
            <td>
                @Html.DisplayNameFor(model => model.Package.Id)
            </td>
            <td>@Html.DisplayFor(model => model.Package.Id)</td>
        </tr>

        <tr>
            <td>
                @Html.DisplayNameFor(model => model.Package.Created)
            </td>
            <td>@Html.DisplayFor(model => model.Package.Created)</td>
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(model => Model.Package.Server)
            </td>
            <td>
                <table>
                    <tr>
                        <td>
                            @Html.DisplayNameFor(model => model.Package.Server.Type):
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Package.Server.Type)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.DisplayNameFor(model => model.Package.Server.Id):
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Package.Server.Id)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.DisplayNameFor(model => model.Package.Server.Signature):
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Package.Server.Signature)
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.Package.Timestamps)
            </td>
            <td>
                <table class="table">
                    <tbody>
                        @foreach (var timestamp in Model.Package.Timestamps)
                        {
                            <tr>
                                <td>@Html.DisplayNameFor(t => timestamp.Blockchain):</td>
                                <td>@Html.DisplayFor(t => timestamp.Blockchain)</td>
                            </tr>

                            <tr>
                                <td>@Html.DisplayNameFor(t => timestamp.Service):</td>
                                <td>@Html.DisplayFor(t => timestamp.Service)</td>
                            </tr>

                            <tr>
                                <td>@Html.DisplayNameFor(t => timestamp.Registered):</td>
                                <td>@Html.DisplayFor(t => timestamp.Registered)</td>
                            </tr>

                            <tr>
                                <td>@Html.DisplayNameFor(t => timestamp.Proof.Address):</td>
                                @*<td><a href="@ViewData["addressLookupUrl"]" target="_blank">@Html.Encode(ViewData["address"])</a></td>*@
                                <td>@Html.DisplayFor(t => timestamp.Proof.Address)</td>
                            </tr>
                            <tr>
                                <td>@Html.DisplayNameFor(t => timestamp.Proof.Confirmations):</td>
                                <td>@Html.DisplayFor(t => timestamp.Proof.Confirmations)</td>
                            </tr>

                            <tr>
                                <td>@Html.DisplayNameFor(t => timestamp.Source):</td>
                                <td>@Html.DisplayFor(t => timestamp.Source)</td>
                            </tr>

                            <tr>
                                <td>@Html.DisplayNameFor(t => timestamp.Value):</td>
                                <td>@Html.DisplayFor(t => timestamp.Value)</td>
                            </tr>

                            <tr>
                                <td>@Html.DisplayNameFor(t => timestamp.Proof.MerkleRoot):</td>
                                <td>@Html.DisplayFor(t => timestamp.Proof.MerkleRoot)</td>
                            </tr>
                            <tr>
                                <td>@Html.DisplayNameFor(t => timestamp.Algorithm):</td>
                                <td>@Html.DisplayFor(t => timestamp.Algorithm)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </td>
        </tr>
    </tbody>
</table>

<div>
    <pre><code>@Newtonsoft.Json.JsonConvert.SerializeObject(Model.Package, Newtonsoft.Json.Formatting.Indented)</code></pre>
</div>
<div>
    <a asp-page="./Index">Back to List</a>
</div>
