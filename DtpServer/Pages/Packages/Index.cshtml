@page
@model DtpServer.Pages.Packages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>
<h3>Build packages</h3>
<div>@Model.CommandResult</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BuildPackages[0].Scopes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.BuildPackages)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Scopes)
                </td>
                <td>
                    <a asp-page="./Details" asp-route-id="@item.DatabaseID">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<h3>Signed packages</h3>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Packages[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Packages[0].Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Packages[0].Scopes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Packages[0].File)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Packages) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Scopes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.File)
            </td>
            <td>
                <a asp-page="./Details" asp-route-id="@item.DatabaseID">Details</a>
                @if (Model.Admin)
                {
                    <span>&nbsp;|&nbsp;</span><a asp-page-handler="Publish" asp-route-id="@item.DatabaseID">Publish</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
