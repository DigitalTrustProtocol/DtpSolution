@page
@model DtpServer.Pages.Workflows.IndexModel

@{
    ViewData["Title"] = "Workflows";
}

<h2>Workflows</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.WorkflowViews[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkflowViews[0].State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkflowViews[0].Active)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkflowViews[0].NextExecution)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.WorkflowViews) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)<br />
                <h7>
                    @Html.DisplayFor(modelItem => item.Description)
                </h7>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NextExecution)
            </td>
            <td>
                <a asp-page="./Details" asp-route-id="@item.DatabaseID">View</a>
                @if (Model.Admin)
                {
                    <span>&nbsp;|&nbsp;</span><a asp-page-handler="Run" asp-route-id="@item.DatabaseID">Run</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
